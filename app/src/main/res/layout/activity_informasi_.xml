<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Informasi_Activity"
    android:background="@drawable/wanimasi">

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/img_panah"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bgpanah_state"
        android:onClick="panah_kiri"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:id="@+id/btn_petunjuk1"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:text="Rambu Petunjuk"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/bg_menuinformasi"
        android:onClick="pindahbtn_petunjuk"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:id="@+id/btn_perintah"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@id/btn_petunjuk1"
        android:layout_marginLeft="30dp"
        android:text="Rambu Perintah"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/bg_menuinformasi"
        android:onClick="pindah_perintah"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:id="@+id/btn_larangan"
        android:text="Rambu Larangan"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:onClick="pindah_larangan"
        android:layout_below="@id/btn_petunjuk1"
        android:background="@drawable/bg_menuinformasi"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:id="@+id/btn_peringatan"
        android:text="Rambu Peringatan"
        android:layout_toRightOf="@id/btn_larangan"
        android:layout_below="@id/btn_perintah"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:onClick="pindah_peringatan"
        android:background="@drawable/bg_menuinformasi"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:id="@+id/btn_fakta"
        android:text="Tau Gak Sih?"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:onClick="pindah_fakta"
        android:background="@drawable/bg_menuinformasi"
        android:layout_below="@id/btn_larangan"/>

</RelativeLayout>