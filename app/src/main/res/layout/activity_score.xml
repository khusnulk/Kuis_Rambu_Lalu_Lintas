<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bermain.Score_Activity"
    android:background="@drawable/wanimasi">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="203dp"
        android:background="@color/white"
        android:padding="20dp">

        <TextView
            android:id="@+id/tampil_Skor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:padding="7dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/skor_tertinggi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tampil_Skor"
            android:layout_marginTop="19dp"
            android:padding="7dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/cobalagi"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/skor_tertinggi"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/Dodger_Blue"
           android:text="Retry"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <Button
            android:id="@+id/utama"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/skor_tertinggi"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/cobalagi"
            android:background="@color/Dodger_Blue"
            android:text="Home"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/menulevel"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/skor_tertinggi"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/utama"
            android:background="@color/Dodger_Blue"
            android:text="menu"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>