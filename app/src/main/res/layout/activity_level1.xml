<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bermain.Level1"
    android:background="@drawable/wanimasi">

<!-- jumlah soal-->
    <TextView
        android:id="@+id/soal_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Soal :"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/jumlahsoal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/soal_text"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

<!--skor-->

    <TextView
        android:id="@+id/score_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Skor :"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_toRightOf="@id/jumlahsoal"/>

    <TextView
        android:id="@+id/skor"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/score_text"/>

<!-- soal  & jawaban  -->

